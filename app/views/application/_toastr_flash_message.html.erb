<% if flash.any? %>
  <%= javascript_tag nonce: true do %>
    <% flash.each do |key, value| %>
      <% type = key.to_s.gsub('alert', 'error').gsub('notice', 'success') %>
      toastr.<%= type %>('<%= value %>', '', {"closeButton": true,
                                              "positionClass": "toast-top-center",
                                              "onclick": null,
                                              "showDuration": "300",
                                              "hideDuration": "1000",
                                              "timeOut": "5000",
                                              "extendedTimeOut": "1000",
                                              "showEasing": "swing",
                                              "hideEasing": "linear",
                                              "showMethod": "fadeIn",
                                              "progressBar": true,
                                              "hideMethod": "fadeOut" })
    <% end %>
  <% end %>
<% end %>
