<%= bootstrap_form_for line_item, remote: true, layout: :inline  do |f| %>
  <%= f.hidden_field :product_id, value: product.id %>
  <%= f.hidden_field :unit_price, value: product.price %>
  <%= f.number_field :quantity, value: line_item.quantity, min: 1, hide_label: true %>
  <%= f.submit "Update Cart" %>
  <%= link_to "Remove from Cart", line_item_path(line_item), class: "btn btn-danger", method: :delete, remote: true %>
<% end %>
