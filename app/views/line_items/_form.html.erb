<%= bootstrap_form_for get_new_line_item, remote: true, layout: :inline  do |f| %>
  <%= f.hidden_field :product_id, value: product.id %>
  <%= f.hidden_field :unit_price, value: product.price %>
  <%= f.number_field :quantity, value: 1, min: 1, hide_label: true %>
  <%= f.submit "Add to Cart" %>
<% end %>
